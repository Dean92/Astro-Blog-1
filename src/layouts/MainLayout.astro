---
// Component Import

import MainHead from './MainHead.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

// Style Import
import '../styles/global.css';

const { title = 'My Astro Blog', description = 'My musings about the Astro framework', image, data, robots } = Astro.props;
---

<html lang="en">
  <MainHead title={title} description={description} {image} {data} {robots} />
  <body>
    <Nav />
    <main>
      <slot>Default text</slot>
    </main>
    <Footer />
  </body>
</html>
